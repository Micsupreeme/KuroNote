<Window x:Class="KuroNote.AchievementListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KuroNote"
        mc:Ignorable="d"
        Title="Achievements" Height="400" Width="420" MinHeight="400" MinWidth="420" MaxWidth="420"
        Icon="pack://application:,,,/img/icons/kuronote_icon.ico"
        WindowStyle="ToolWindow"
        Background="#404040"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <DockPanel Margin="10" LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Name="btnOk" Click="btnOk_Click" Width="80" Padding="0,4,0,4" Content="OK" IsDefault="True" FontSize="14"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <Canvas Name="achCanvas" Height="0">
                
            </Canvas>
        </ScrollViewer>
    </DockPanel>
</Window>
